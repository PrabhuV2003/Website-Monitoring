# WordPress Monitor Environment Variables
# Copy this file to .env and fill in your credentials

# SMTP Email Configuration (Required for email reports)
# For Gmail: Use an App Password, not your regular password
# Generate App Password at: https://myaccount.google.com/apppasswords
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password-here

# Optional: Dashboard secret key
DASHBOARD_SECRET_KEY=your-random-secret-key-here

# Optional: PageSpeed API key
PAGESPEED_API_KEY=

# Optional: Slack webhook URL
SLACK_WEBHOOK_URL=

# Optional: Discord webhook URL
DISCORD_WEBHOOK_URL=

# Optional: WordPress authentication (if needed)
WP_MONITOR_PASSWORD=

# Optional: Database credentials (if using MySQL)
DB_USERNAME=
DB_PASSWORD=
